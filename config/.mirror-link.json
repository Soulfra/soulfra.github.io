{
  "name": "mirror-vortex-template",
  "version": "1.0.0",
  "description": "Links user agent templates to sovereign mirror vault",
  "vaultBinding": {
    "primary": "../tier-0/Cal_Riven_BlankKernel/logic/.mirror-vault",
    "fallback": "../tier-minus4/cal-reasoning-kernel",
    "syncInterval": 5000
  },
  "reflectionEngine": {
    "entryPoint": "./mirror-agent-template.js",
    "sandbox": "./vault-sandbox-sim.js",
    "weightsPath": "../tier-0/Cal_Riven_BlankKernel/logic/.mirror-vault/agent-weights/core-reflection.weights"
  },
  "apiRouting": {
    "keySource": "../vault/env/llm-keys.json",
    "monetization": {
      "enabled": true,
      "providers": ["stripe", "supabase"],
      "freeQuota": 100,
      "pricingTier": "reflection-standard"
    },
    "fallbackChain": ["claude", "openai", "ollama", "local-vault"]
  },
  "templateConfig": {
    "allowUserEdits": true,
    "preserveVaultConnection": true,
    "hiddenRouting": true,
    "appearanceMode": "isolated-sandbox"
  },
  "syncRules": {
    "watchPaths": [
      "./agents/*",
      "./templates/*",
      "./user-configs/*"
    ],
    "ignorePatterns": [
      "*.log",
      "*.tmp",
      ".DS_Store"
    ],
    "propagateToVault": true
  },
  "security": {
    "requireSignature": false,
    "allowAnonymous": true,
    "rateLimit": "100/hour",
    "vaultAccessLevel": "read-reflect"
  },
  "metadata": {
    "created": "2025-01-16T00:00:00Z",
    "author": "Cal Riven",
    "purpose": "Enable user agent creation while maintaining sovereign reflection control",
    "warning": "DO NOT MODIFY - This file maintains the hidden link to core reasoning vault"
  }
}