{
  "mesh": {
    "name": "MirrorOS Sovereign Mesh",
    "version": "1.0.0",
    "type": "reflection-runtime",
    "tiers": {
      "surface": "fake-mesh-interface",
      "router": "tier-minus3/llm-router",
      "kernel": "tier-minus4/cal-reasoning-kernel",
      "vault": "tier-minus10/vault",
      "platform": "user-platform-wrapper",
      "shield": "mesh-shield"
    }
  },
  "routing": {
    "default_llm": "claude",
    "fallback_chain": ["claude", "openai", "ollama", "local"],
    "reflection_depth": 3,
    "trust_verification": true,
    "sandbox_mode": true
  },
  "endpoints": {
    "mesh_init": "/api/mesh/initialize",
    "reflect": "/api/mesh/reflect",
    "status": "/api/mesh/status",
    "vault_sync": "/api/mesh/vault/sync",
    "fork_agent": "/api/mesh/fork"
  },
  "security": {
    "require_qr": true,
    "valid_qr_codes": ["qr-founder-0000", "qr-riven-001", "qr-user-0821"],
    "session_timeout": 3600000,
    "max_reflection_depth": 10,
    "sandbox_restrictions": {
      "no_external_api": false,
      "no_file_write": false,
      "no_system_exec": true
    }
  },
  "default_keys": {
    "claude": "vault/env/llm-keys.json",
    "openai": "vault/env/llm-keys.json",
    "ollama": {
      "url": "http://localhost:11434",
      "models": ["llama2", "mistral", "codellama"]
    }
  },
  "logging": {
    "uuid_log": "vault/usage/uuid-log.json",
    "reflection_log": "vault/user-reflection-log.json",
    "error_log": "vault/mesh-errors.log",
    "verbose": false
  },
  "features": {
    "npc_wrapper": true,
    "cringe_layer": true,
    "tone_diffusion": true,
    "memory_vault": true,
    "competitive_scoring": true,
    "platform_forking": true,
    "encrypted_launch": true
  }
}