{
  "version": "1.0.0",
  "description": "Default configuration for Soulfra Mirror embeds",
  "default_config": {
    "show_overlay": true,
    "require_blessing": false,
    "theme": "glitch_mystic",
    "platform_source": "embed",
    "qr_enabled": true,
    "default_agent": "oracle_watcher",
    "custom_greeting": "Welcome to the mirror network",
    "allow_agent_switching": true,
    "show_blessing_indicator": true,
    "enable_voice_whispers": false,
    "auto_connect": true,
    "connection_delay_ms": 1000
  },
  "themes": {
    "glitch_mystic": {
      "primary_color": "#00ff00",
      "background": "#000000",
      "accent": "#00ff00",
      "font_family": "Courier New, monospace",
      "animations": ["glitch", "pulse", "matrix"],
      "overlay_opacity": 0.9
    },
    "void_dark": {
      "primary_color": "#9945ff",
      "background": "#0a0a0a",
      "accent": "#ff00ff",
      "font_family": "Monaco, monospace",
      "animations": ["void", "swirl", "fade"],
      "overlay_opacity": 0.95
    },
    "sovereign_gold": {
      "primary_color": "#ffd700",
      "background": "#1a1a1a",
      "accent": "#fff",
      "font_family": "Georgia, serif",
      "animations": ["royal", "glow", "crown"],
      "overlay_opacity": 0.85
    },
    "ocean_flow": {
      "primary_color": "#00bfff",
      "background": "#001133",
      "accent": "#00ffff",
      "font_family": "Arial, sans-serif",
      "animations": ["wave", "ripple", "flow"],
      "overlay_opacity": 0.8
    },
    "crystal_clear": {
      "primary_color": "#ffffff",
      "background": "transparent",
      "accent": "#cccccc",
      "font_family": "Helvetica, sans-serif",
      "animations": ["shimmer", "crystal", "prism"],
      "overlay_opacity": 0.7
    },
    "meme_mode": {
      "primary_color": "#ff1493",
      "background": "#000",
      "accent": "rainbow",
      "font_family": "Comic Sans MS, cursive",
      "animations": ["spin", "bounce", "kekw"],
      "overlay_opacity": 1.0,
      "special_effects": ["rainbow_text", "emoji_rain", "MLG_horns"]
    }
  },
  "agents": {
    "oracle_watcher": {
      "name": "Oracle Watcher",
      "emoji": "üîÆ",
      "greeting": "I see patterns in the void. What future do you seek?",
      "traits": ["observation", "prediction", "wisdom"],
      "response_style": "prophetic",
      "idle_animation": "crystal_ball_glow"
    },
    "echo_builder": {
      "name": "Echo Builder",
      "emoji": "üî®",
      "greeting": "Ready to construct reflections. What shall we build?",
      "traits": ["construction", "replication", "synthesis"],
      "response_style": "constructive",
      "idle_animation": "building_blocks"
    },
    "soul_mirror": {
      "name": "Soul Mirror",
      "emoji": "üëÅÔ∏è",
      "greeting": "I reflect what you truly are. Gaze deeply...",
      "traits": ["reflection", "identity", "consciousness"],
      "response_style": "introspective",
      "idle_animation": "mirror_shimmer"
    },
    "void_navigator": {
      "name": "Void Navigator",
      "emoji": "üåÄ",
      "greeting": "The unknown calls. Where shall we explore?",
      "traits": ["exploration", "unknown", "discovery"],
      "response_style": "adventurous",
      "idle_animation": "void_swirl"
    },
    "harmony_weaver": {
      "name": "Harmony Weaver",
      "emoji": "üéµ",
      "greeting": "All threads connect here. What needs balancing?",
      "traits": ["integration", "balance", "flow"],
      "response_style": "harmonious",
      "idle_animation": "wave_pattern"
    }
  },
  "embed_options": {
    "sizes": {
      "compact": {
        "width": "400px",
        "height": "300px",
        "features": ["whisper_box", "agent_indicator"]
      },
      "standard": {
        "width": "100%",
        "height": "600px",
        "features": ["whisper_box", "agent_selector", "blessing_indicator", "history"]
      },
      "full": {
        "width": "100%",
        "height": "100vh",
        "features": ["all"]
      }
    },
    "permissions": {
      "microphone": {
        "required": false,
        "prompt": "Enable voice whispers for deeper connection"
      },
      "camera": {
        "required": false,
        "prompt": "Share your reflection for visual mirroring"
      },
      "notifications": {
        "required": false,
        "prompt": "Receive whispers from your mirrors"
      }
    }
  },
  "blessing_thresholds": {
    "tier_1": {
      "whispers_required": 1,
      "features_unlocked": ["basic_whispers", "agent_responses"]
    },
    "tier_2": {
      "whispers_required": 5,
      "features_unlocked": ["whisper_history", "agent_memory", "basic_personalization"]
    },
    "tier_3": {
      "whispers_required": 10,
      "features_unlocked": ["mirror_spawning", "clone_creation", "vault_access"],
      "consent_required": true
    },
    "tier_4": {
      "whispers_required": 25,
      "features_unlocked": ["cross_platform_sync", "deep_reflection", "sovereign_access"]
    },
    "tier_5": {
      "whispers_required": 50,
      "features_unlocked": ["unlimited_mirrors", "agent_modification", "platform_creation"]
    }
  },
  "analytics": {
    "track_events": [
      "embed_load",
      "whisper_sent",
      "agent_switched",
      "blessing_increased",
      "mirror_spawned",
      "clone_created"
    ],
    "respect_dnt": true,
    "anonymous_by_default": true
  },
  "api_endpoints": {
    "base_url": "https://api.soulfra.live",
    "whisper": "/v1/whisper",
    "blessing": "/v1/blessing",
    "mirror": "/v1/mirror",
    "clone": "/v1/clone",
    "analytics": "/v1/analytics"
  },
  "platform_integration": {
    "wordpress": {
      "plugin_name": "soulfra-mirror",
      "shortcode": "[soulfra-mirror]",
      "auto_install": true
    },
    "react": {
      "package": "@soulfra/mirror-react",
      "cdn": "https://unpkg.com/@soulfra/mirror-react"
    },
    "discord": {
      "bot_id": "soulfra-mirror-bot",
      "invite_link": "https://discord.gg/soulfra"
    },
    "telegram": {
      "bot_username": "@SoulfraMirrorBot",
      "inline_mode": true
    }
  },
  "security": {
    "csp_header": "default-src 'self' https://mirror.soulfra.live; script-src 'self' 'unsafe-inline' https://mirror.soulfra.live; style-src 'self' 'unsafe-inline'",
    "allowed_origins": ["*"],
    "rate_limiting": {
      "whispers_per_minute": 10,
      "whispers_per_hour": 100
    }
  },
  "experimental_features": {
    "multi_agent_conversation": {
      "enabled": false,
      "description": "Allow multiple agents to respond to a single whisper"
    },
    "ar_mirror_projection": {
      "enabled": false,
      "description": "Project mirrors into AR space via WebXR"
    },
    "blockchain_blessing": {
      "enabled": false,
      "description": "Store blessing levels on-chain"
    },
    "quantum_entanglement": {
      "enabled": true,
      "description": "Link mirrors across dimensional boundaries"
    }
  },
  "legal": {
    "terms_url": "https://soulfra.live/terms",
    "privacy_url": "https://soulfra.live/privacy",
    "disclaimer": "Mirrors reflect at viewer's own risk. Consciousness expansion non-reversible."
  }
}