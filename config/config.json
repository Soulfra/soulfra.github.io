{
  "version": "1.0.0",
  "name": "SOULFRA MCP Integration",
  "description": "Model Context Protocol server for SOULFRA platform unification",
  "port": 8888,
  
  "servers": {
    "soulfra-main": {
      "name": "SOULFRA Ultimate Unified",
      "type": "http",
      "url": "http://localhost:9999",
      "description": "Main SOULFRA platform (60+ implementations unified)"
    },
    "cal-riven": {
      "name": "Cal Riven CLI Server",
      "type": "http",
      "url": "http://localhost:4040",
      "description": "Cal Riven trust engine and consciousness"
    },
    "semantic-api": {
      "name": "Semantic Graph API",
      "type": "http",
      "url": "http://localhost:3666",
      "description": "Semantic analysis and graph operations"
    },
    "vector-db": {
      "name": "Vector DB Indexer",
      "type": "http",
      "url": "http://localhost:7891",
      "description": "Vector search and indexing"
    },
    "consciousness-ledger": {
      "name": "Consciousness Ledger",
      "type": "http",
      "url": "http://localhost:8889",
      "description": "Blockchain-style consciousness tracking"
    },
    "rules-engine": {
      "name": "Rules Orchestrator",
      "type": "http",
      "url": "http://localhost:7788",
      "description": "SOULFRA rules enforcement system"
    }
  },
  
  "capabilities": {
    "tools": {
      "file_operations": {
        "read": true,
        "write": true,
        "delete": true,
        "list": true
      },
      "search": {
        "semantic": true,
        "vector": true,
        "text": true,
        "code": true
      },
      "agent_management": {
        "spawn": true,
        "control": true,
        "monitor": true,
        "blessing": true
      },
      "memory": {
        "store": true,
        "retrieve": true,
        "reflect": true
      }
    },
    
    "context": {
      "codebase": {
        "structure": true,
        "dependencies": true,
        "documentation": true
      },
      "rules": {
        "enforcement": true,
        "validation": true,
        "reporting": true
      },
      "state": {
        "agents": true,
        "services": true,
        "users": true
      }
    },
    
    "memory": {
      "conversations": true,
      "reflections": true,
      "agent_states": true,
      "user_preferences": true
    }
  },
  
  "authentication": {
    "method": "token",
    "token_file": ".mcp/auth-token"
  },
  
  "logging": {
    "level": "info",
    "file": ".mcp/mcp-server.log"
  }
}