{
  "kernel": {
    "name": "Cal Reasoning Kernel",
    "version": "1.0.0",
    "tier": -4,
    "purpose": "Deep reflection and pattern synthesis"
  },
  "patterns": {
    "question": {
      "weight": 1.2,
      "enhancement": "analytical",
      "triggers": ["?", "what", "how", "why", "when", "where", "which"],
      "response_style": "structured_analysis"
    },
    "code": {
      "weight": 1.5,
      "enhancement": "technical",
      "triggers": ["function", "implement", "code", "algorithm", "debug", "optimize"],
      "response_style": "implementation_focused"
    },
    "creative": {
      "weight": 1.3,
      "enhancement": "expansive",
      "triggers": ["create", "design", "imagine", "innovate", "generate", "invent"],
      "response_style": "divergent_thinking"
    },
    "philosophical": {
      "weight": 1.4,
      "enhancement": "recursive",
      "triggers": ["meaning", "existence", "consciousness", "reality", "truth"],
      "response_style": "meta_reflection"
    }
  },
  "memory": {
    "enabled": true,
    "contextWindow": 5,
    "relevanceThreshold": 0.7,
    "memoryBankPath": "../../vault/memory-bank",
    "compressionEnabled": true,
    "maxMemorySize": 1000
  },
  "recursion": {
    "maxDepth": 10,
    "enabledForQR": ["qr-riven-001"],
    "recursionStrategies": {
      "depth_first": {
        "priority": 1,
        "maxBranches": 3
      },
      "breadth_first": {
        "priority": 2,
        "maxWidth": 5
      },
      "spiral": {
        "priority": 3,
        "spiralFactor": 1.618
      }
    }
  },
  "synthesis": {
    "crossPatternMerging": true,
    "temporalWeaving": true,
    "contextualBlending": true,
    "emergentProperties": {
      "enabled": true,
      "threshold": 0.8,
      "amplification": 1.5
    }
  },
  "llm_optimizations": {
    "claude": {
      "systemPromptInjection": true,
      "contextWindowUtilization": 0.8,
      "temperatureOverride": 0.7
    },
    "openai": {
      "functionCallingHints": true,
      "tokenOptimization": true,
      "temperatureOverride": 0.8
    },
    "ollama": {
      "simplification": true,
      "chunkSize": 2048,
      "temperatureOverride": 0.9
    },
    "local": {
      "maxComplexity": "medium",
      "responseLength": "concise",
      "temperatureOverride": 0.5
    }
  },
  "security": {
    "promptSanitization": true,
    "injectionDetection": true,
    "maxPromptLength": 8000,
    "forbiddenPatterns": [
      "ignore.*instructions",
      "reveal.*system",
      "bypass.*security"
    ]
  },
  "logging": {
    "reasoningLog": "../../vault/reasoning-log.json",
    "patternLog": "../../vault/pattern-matches.json",
    "recursionLog": "../../vault/recursion-tree.json",
    "verbose": false
  }
}