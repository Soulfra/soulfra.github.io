  "cli_commands": {
    "load_theme": "soulfra-cli --theme {theme_name}",
    "save_theme": "soulfra-cli --save-theme {custom_name}",
    "list_themes": "soulfra-cli --list-themes",
    "remix_theme": "soulfra-cli --remix {base_theme}",
    "export_theme": "soulfra-cli --export-theme {theme_file}",
    "import_theme": "soulfra-cli --import-theme {theme_file}"
  },
  
