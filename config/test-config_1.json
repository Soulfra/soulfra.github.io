{
  "testing": {
    "environment": "local",
    "debug": true,
    "stubMode": true,
    "mockPayments": true
  },
  "limits": {
    "soft_mode": {
      "max_hourly_calls": 10,
      "max_daily_exports": 5,
      "max_concurrent_agents": 3,
      "storage_limit_mb": 100
    },
    "platform_mode": {
      "max_hourly_calls": 1000,
      "max_daily_exports": 100,
      "max_concurrent_agents": 50,
      "storage_limit_mb": 10000
    }
  },
  "test_scenarios": {
    "basic_user_flow": {
      "description": "Test basic reflection and export flow",
      "steps": [
        "Visit homepage",
        "Start voice reflection", 
        "Navigate folders",
        "Attempt export",
        "Complete Stripe flow"
      ],
      "expected_duration": "5-10 minutes"
    },
    "device_pairing": {
      "description": "Test QR-based device pairing",
      "steps": [
        "Generate QR code",
        "Scan with mobile device",
        "Verify geofencing",
        "Test cross-device sync"
      ],
      "expected_duration": "3-5 minutes"
    },
    "mode_switching": {
      "description": "Test soft to platform mode upgrade",
      "steps": [
        "Start in soft mode",
        "Trigger upgrade conditions",
        "Switch to platform mode",
        "Verify feature access"
      ],
      "expected_duration": "10-15 minutes"
    },
    "api_routing": {
      "description": "Test API call routing and billing",
      "steps": [
        "Configure API keys (BYOK)",
        "Make API calls",
        "Verify routing logic",
        "Check receipt generation"
      ],
      "expected_duration": "5-10 minutes"
    }
  },
