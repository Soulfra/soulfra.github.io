    },
    "agent_spawn": {
      "max_time_ms": 2000,
      "memory_limit_mb": 100
    },
    "api_routing": {
      "max_response_ms": 500,
      "success_rate": 0.99
    },
    "qr_validation": {
      "max_time_ms": 200,
