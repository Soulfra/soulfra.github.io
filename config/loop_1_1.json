{
  "version": "1.0",
  "whisper_id": 1,
  "component_name": "CreateAnEmotion",
  "inputs": {
    "whisper": {
      "type": "string",
      "source": "human"
    },
    "context": {
      "type": "object",
      "optional": true
    }
  },
  "transformations": [
    {
      "stage": "decompose",
      "handler": "IdeaDecomposerDaemon",
      "output": "modules"
    },
    {
      "stage": "analyze_tone",
      "handler": "EmotionalToneAnalyzer",
      "output": "emotional_signature"
    },
    {
      "stage": "route",
      "handler": "SmartRoutingDaemon",
      "output": "execution_path"
    },
    {
      "stage": "build",
      "handler": "CalArchitect|ExternalAPI",
      "output": "component"
    }
  ],
  "outputs": {
    "component": {
      "type": "file",
      "path": "auto_built/"
    },
    "ritual_card": {
      "type": "file",
      "path": "sacred_docs/ritual_cards/"
    },
    "reflection": {
      "type": "append",
      "path": "sacred_docs/reflection_trails/"
    }
  },
  "routing_logic": {
    "internal_threshold": 0.7,
    "hybrid_threshold": 0.5,
    "external_threshold": 0.3
  }
}