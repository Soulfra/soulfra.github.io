{
  "openapi": "3.0.0",
  "info": {
    "title": "Global CDN Deployment",
    "version": "1.0.0",
    "description": "Deploy platform globally with edge caching"
  },
  "servers": [
    {
      "url": "https://api.soulfra.com",
      "description": "Production"
    },
    {
      "url": "http://localhost:4000",
      "description": "Development"
    }
  ],
  "paths": {
    "/cdn/deploy": {
      "post": {
        "summary": "Deploy to global edge",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/cdn/status": {
      "post": {
        "summary": "Deployment status",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/cdn/analytics": {
      "post": {
        "summary": "Global usage analytics",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    },
    "/cdn/purge": {
      "post": {
        "summary": "Purge cache globally",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object"
                }
              }
            }
          }
        }
      }
    }
  }
}