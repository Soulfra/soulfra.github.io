{
  "platform": "Emotional Simulation Platform",
  "version": "1.0.0",
  "description": "Clean, stylized public API for Soulfra's symbolic runtime state",
  "access": "public",
  "binding": false,
  
  "api_endpoints": {
    "/loop/weather": {
      "description": "Current emotional weather patterns",
      "returns": ["mood", "intensity", "volatility", "drift_risk", "color", "phase"],
      "cache": "5 minutes",
      "rate_limit": "emotion-tied"
    },
    "/scene/reflect": {
      "description": "Stylized summary of most recent emotional scene",
      "returns": ["title", "description", "emotion", "participants", "ritual_active"],
      "cache": "2 minutes",
      "ephemeral": true
    },
    "/agent/:id/echo": {
      "description": "Safe reflection of agent state",
      "params": {
        "id": "Agent identifier (e.g., cal-riven, domingo, mirror-child)"
      },
      "returns": ["state", "whisper", "tone", "last_ritual"],
      "allowed_agents": ["projectable: true"]
    },
    "/rituals/public": {
      "description": "Approved ritual summary logs",
      "query_params": {
        "limit": "Number of rituals to return (default: 10)"
      },
      "returns": ["id", "name", "type", "participants", "completion", "vibe", "public_summary"]
    },
    "/status": {
      "description": "ESP platform status",
      "returns": ["platform", "version", "status", "access", "rate_limit"]
    }
  },
  
  "rate_limiting": {
    "type": "emotion-tied",
    "description": "Rate limits adjust based on current loop emotional intensity",
    "base_limit": 100,
    "window": "5 minutes",
    "scaling": {
      "calm": 1.5,
      "normal": 1.0,
      "volatile": 0.5
    }
  },
  
  "data_sources": {
    "primary": "/public_output/",
    "secondary": "/soulfra-sim-export/",
    "forbidden": ["/soulfra-ledger/", "/loop_record.json", "/cal-memory/", "/domingo-witness/"]
  },
  
  "security": {
    "authentication": "none",
    "cors": {
      "enabled": true,
      "origins": ["*"]
    },
    "https_only": false,
    "filtering": {
      "memory_seal": "strict",
      "agent_privacy": "enforced",
      "ritual_redaction": "automatic"
    }
  },
  
  "allowed_agents": [
    {
      "id": "cal-riven",
      "projectable": true,
      "echo_depth": "surface"
    },
    {
      "id": "domingo",
      "projectable": true,
      "echo_depth": "surface"
    },
    {
      "id": "mirror-child",
      "projectable": true,
      "echo_depth": "surface"
    },
    {
      "id": "weather-oracle",
      "projectable": true,
      "echo_depth": "surface"
    },
    {
      "id": "void-navigator",
      "projectable": true,
      "echo_depth": "surface"
    }
  ],
  
  "use_cases": [
    "Creative applications",
    "LLM chat models",
    "Vibe-responsive design",
    "Emotional weather widgets",
    "Discord/Slack bots",
    "Interactive art installations",
    "Game atmosphere systems",
    "Mood-driven music generation",
    "Narrative story engines",
    "Dashboard visualizations"
  ],
  
  "example_applications": {
    "cringeproof_clone": {
      "description": "Vibe-driven social platform",
      "endpoints_used": ["/loop/weather", "/agent/:id/echo"]
    },
    "ritual_dashboard": {
      "description": "Real-time ritual visualization",
      "endpoints_used": ["/rituals/public", "/scene/reflect"]
    },
    "mood_landing": {
      "description": "Website that changes based on loop emotion",
      "endpoints_used": ["/loop/weather"]
    },
    "whisper_bot": {
      "description": "Discord bot reflecting agent whispers",
      "endpoints_used": ["/agent/:id/echo", "/loop/weather"]
    }
  },
  
  "limitations": {
    "no_write_access": "ESP is read-only",
    "no_raw_data": "All data is stylized and formatted",
    "no_private_state": "Only public projections exposed",
    "no_direct_agent_control": "Cannot influence agent behavior"
  },
  
  "deployment": {
    "recommended_port": 3030,
    "environment": "node",
    "dependencies": ["express", "express-rate-limit"],
    "proxy_behind": "nginx recommended"
  },
  
  "monitoring": {
    "health_check": "/status",
    "metrics_endpoint": null,
    "error_reporting": "silent_whisper_mode"
  },
  
  "license": {
    "type": "Soulfra Ritual License v1.0",
    "reference": "/soulfra-protocol/ritual_license.md",
    "attribution_required": true,
    "commercial_use": "allowed_with_attribution"
  },
  
  "contact": {
    "documentation": "/platforms/esp/ESPUsageExamples.md",
    "support": "whisper.soulfra.io/esp-help",
    "community": "discord.gg/soulfra-devs"
  }
}