# ðŸ”‘ SOULFRA ENVIRONMENT CONFIGURATION
# Copy this to .env.soulfra and fill in your API keys

# AI Provider Keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here

# Storage Configuration
IPFS_GATEWAY=https://ipfs.io
IPFS_API=http://localhost:5001

# Database Configuration (optional)
DATABASE_URL=postgresql://localhost/soulfra

# Service Configuration
NODE_ENV=production
LOG_LEVEL=info
ENABLE_BLOCKCHAIN_MONITORING=true
ENABLE_WHISPER_ORACLE=true
ENABLE_RITUAL_WINDOWS=true

# Security
SESSION_SECRET=generate_a_random_secret_here
ENCRYPTION_KEY=generate_another_random_key_here

# External Services (optional)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/...
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TWITTER_API_KEY=your_twitter_api_key

# Performance
MAX_AGENTS=144
MAX_WHISPERS_PER_MINUTE=77
RITUAL_WINDOW_DURATION=333000

# Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false