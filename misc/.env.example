# Billion Dollar Game Environment Variables
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000
HOST=0.0.0.0
APP_URL=http://localhost:3000
APP_NAME="Billion Dollar Game"
LOG_LEVEL=info

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=billion_dollar_game
DB_USER=postgres
DB_PASSWORD=your_secure_password
DB_POOL_MAX=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=billion_dollar_redis_2024
REDIS_DB=0
REDIS_KEY_PREFIX=bdg:

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/billion_dollar_game
MONGODB_POOL_SIZE=10

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_this
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d
BCRYPT_ROUNDS=10

# Security
VAULT_MASTER_KEY=your_vault_master_key_32_chars_long
ENCRYPTION_ALGORITHM=aes-256-gcm
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
SESSION_TIMEOUT=3600000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_CURRENCY=usd

# OpenAI
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_ORGANIZATION=org-your_org_id
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=2000
OPENAI_TEMPERATURE=0.7

# Discord
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CLIENT_ID=your_discord_client_id
DISCORD_CLIENT_SECRET=your_discord_client_secret
DISCORD_GUILD_ID=your_discord_guild_id
DISCORD_COMMAND_PREFIX=!

# Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhooks/telegram
TELEGRAM_SECRET_TOKEN=your_telegram_secret_token

# Twilio (SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
TWILIO_MESSAGING_SERVICE_SID=your_messaging_service_sid

# SendGrid (Email)
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@billiondollargame.com
SENDGRID_FROM_NAME="Billion Dollar Game"
SENDGRID_TEMPLATE_WELCOME=d-template_id_here
SENDGRID_TEMPLATE_CONTRACT_CREATED=d-template_id_here
SENDGRID_TEMPLATE_CONTRACT_SIGNED=d-template_id_here
SENDGRID_TEMPLATE_PAYMENT_RECEIVED=d-template_id_here

# WhatsApp (uses Twilio)
WHATSAPP_PHONE_NUMBER=+1234567890
WHATSAPP_BUSINESS_PROFILE_SID=your_business_profile_sid

# Game Configuration
MAX_CONTRACTS_PER_USER=100
BASE_FEE_PERCENTAGE=2.5
MIN_CONTRACT_VALUE=1
MAX_CONTRACT_VALUE=1000000
DAILY_BONUS_AMOUNT=100
REFERRAL_BONUS=500
LEVEL_UP_XP=1000

# WebSocket
WS_PORT=3001
WS_PING_INTERVAL=30000
WS_PING_TIMEOUT=5000
WS_MAX_PAYLOAD=1048576

# Monitoring
SENTRY_DSN=https://your_sentry_dsn@sentry.io/project_id
DATADOG_API_KEY=your_datadog_api_key
DATADOG_APP_KEY=your_datadog_app_key
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000

# Backup Configuration
S3_BACKUP_BUCKET=s3://billion-dollar-game-backups
BACKUP_RETENTION_DAYS=30
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_WEBHOOK=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3002

# Admin Credentials (for initial setup)
ADMIN_EMAIL=admin@billiondollargame.com
ADMIN_PASSWORD=change_this_admin_password